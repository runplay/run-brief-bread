<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout"
    android:clickable="true"
    >
    <RelativeLayout
        android:id="@+id/main_gotop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white_alpha_gotop"
        android:clickable="true"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"

            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_gotop_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gt_brief"
                >
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/go_top"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
<run.brief.b.SwipeRefreshLayout 
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    >
	<GridView android:id="@+id/news_list_view"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />
</run.brief.b.SwipeRefreshLayout>
<include layout="@layout/syncing_news" />
<LinearLayout 
		    android:id="@+id/empty_news"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:orientation="vertical"
		    android:visibility="gone"
		    android:gravity="center"
	    android:paddingLeft="30dp"
	    android:paddingRight="30dp"
		    >
	<TextView
        android:id="@+id/news_text_1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:text="@string/no_data" 
	    style="@style/field_title"
	    android:gravity="center"
	    android:layout_marginBottom="10dp"
	    />
    <ImageView
        android:id="@+id/info_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/downloading200x140"
        android:gravity="center"
         />
    <TextView
        android:id="@+id/news_open_select_sources"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_data_news"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:id="@+id/start_quick_txt"
            android:text="@string/startup_random_choice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/start_quick_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startup_quick_start"
            />
    </LinearLayout>
    <GridView
        android:id="@+id/quick_start_feeds"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:stretchMode="columnWidth"
        android:numColumns="2"
        android:verticalSpacing="3dp"
        ></GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/start_manual_txt"
            android:text="@string/startup_or_detail_setup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/start_manual_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startup_manual_setup"
            />
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:id="@+id/empty_news_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <TextView
            android:id="@+id/news_no_pub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/news_no_pub"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:drawableTop="@drawable/icon"
            />
    </LinearLayout>
</RelativeLayout>