<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_touch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
     >

	<RelativeLayout 
	    android:id="@+id/news_item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    >
        <ImageView
            android:id="@+id/publisher_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
	    <TextView
	        android:id="@+id/news_item_pub"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:paddingRight="70dp"
            style="@style/field_date"
	        />
	    <TextView
	        android:id="@+id/news_item_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/field_date"
	        android:layout_margin="2dp"
	        android:gravity="right"
	         />
	</RelativeLayout>
    <LinearLayout
        android:id="@+id/news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_item_top"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/news_item_pub_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/news_item_head"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_top"
            style="@style/field_title"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/news_item_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/content_read"
            />
        <ImageView
            android:id="@+id/news_item_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rate_positive"
            />
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/news_item_title"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/news_item_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_head"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:alpha="80"
            />
        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="120dp"
            android:layout_height="84dp"
            android:scaleType="fitEnd"
            />
    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>